/**index.wxss**/
/* banner */
.banner {
    margin: 30rpx 30rpx 0 30rpx;
    position: relative;
}
.banner swiper {
    height: 315rpx;
    /* height: 400rpx;
    background: #fcca00; */
} 
.banner swiper-item {
    text-align: center;
    height: 100%;
}
.banner navigator {
    width: 100%;
    height: 100%;
    overflow: hidden;
}
.banner image {
    width: 100%;
}
.banner .wx-swiper-dots{
    bottom: 40rpx;
}
.banner .wx-swiper-dot{
    width:14rpx;
    display: inline-flex;
    height: 14rpx;
    margin-left: 10rpx;
    border-radius: 50%;
    background: #fff;
    justify-content:space-between;
    top: 100rpx;
}
.banner .wx-swiper-dot-active {
    width:18rpx;
    height: 18rpx;
    position: relative;
    top: 2rpx;
}
/* menu */
.menu {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    margin: 0rpx 30rpx;
    padding: 40rpx 20rpx;
    background: #fff;
    border-radius: 25rpx;
    box-shadow: 0 0 0.222222rem #eae8e8;
    overflow: hidden;
    margin-top: -25rpx;
    position: relative;
    top: 100;
}
.menu .menu-item {
    flex: 1;
    text-align: center;
}
.menu .menu-item .menu_pic {
    width: 94rpx;
    height: 94rpx;
    margin: 0 auto 10rpx;
    overflow: hidden;
    border-radius: 50%;
    background-color: #f5f2f2;
}
.menu .menu-item image {
    width: 100%;
}
.menu .menu-item text {
    display: block;
    text-align: center;
    color: #454545;
    font-size: 24rpx;
    font-weight: 520;
}

/* store */
.store {
    margin: 40rpx 30rpx;
}
.index_title {
    width: 690rpx;
    height: 76rpx;
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    align-items: center;
    font-size: 32rpx;
    background: url(https://stcdn.taoshibancang.com/static/wechat/index_title_bg.png?v=1) no-repeat center center;
    background-size: 100%;
    border-radius: 10rpx;
    overflow: hidden;
    box-shadow: 0 0 0.222222rem #eae8e8;
}
.index_title .text {
    color: #fff;
    font-weight: 520;
    padding-left: 20rpx;
}
.index_title navigator {
    font-size: 28rpx;
    color: #0a235b;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    padding-right: 20rpx;
}
.store_main {
    width: 690rpx;
    margin: 40rpx 0;
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    flex-wrap: wrap;
}
.store_main navigator {
    width: 340rpx;
    border-radius: 10rpx;
    margin-bottom: 10rpx;
}
.store_main navigator image {
    width: 100%;
}
/* stone */
.stone {
    margin: 40rpx 0 0;
}
.stone .index_title {
    margin: 0 auto 30rpx;
}
.stone_main {
    margin: 20rpx auto 0;
    position: relative;
}
.stone_commend {
    max-height: 300rpx;
    margin: 30rpx 30rpx 0;
    border-radius: 15rpx;
    overflow: hidden;
}
.stone_commend image {
    width: 100%;
}
.stone_main swiper {
    height: 450rpx;
    padding: 0 10rpx;
}
.stone_main swiper swiper-item {
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    flex-wrap: wrap;
    padding: 0 20rpx;
}
.stone_main navigator {
    width: 212rpx;
    height: 212rpx;
    border-radius: 10rpx;
    overflow: hidden;
    background-color: #f5f2f2;
    margin-bottom: 20rpx;
    position: relative;
}
.stone_main navigator .stone_cover {
    width: 100%;
    height: 100%;
}
.stone_main navigator .icon {
    position: absolute;
    top: 0;
    right: 0;
    width: 40%;
}
.stone .dots {
    display: flex;
    display: -webkit-flex;
    justify-content: center;
    align-items: center;
    margin: 30rpx 0;
}
.stone .dots .dot {
    width: 16rpx;
    height: 16rpx;
    border-radius: 50%;
    background: #c2c1c6;
    margin: 0 10rpx;
}
.stone .dots .dot.active {
    background: #ddb573;
}
/* supply */
.supply {
    margin: 0 30rpx 40rpx;
}
.supply_main {
    margin: 30rpx 0 10rpx;
}
.supply_main navigator {
    width: 100%;
    height: 80rpx;
    background: #fff;
    margin-bottom: 30rpx;
    padding: 0 20rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    border-radius: 15rpx;
    position: relative;
    box-shadow: 0 0 0.222222rem #eae8e8;
    overflow: hidden;
}
.supply_main navigator .tit {
    padding-right: 20rpx;
}
.supply_main navigator image {
    width: 100rpx;
    margin-right: 20rpx;
    display: block;
}
.supply_main navigator text {
    flex: 1;
    font-size: 28rpx;
    color: #282b30;
    font-weight: 500;
}
.supply_main navigator .line {
    width: 1px;
    height: 60rpx;
    position: absolute;
    top: 10rpx;
    left: 140rpx;
}
/* news */
.news {
    margin: 0 0 40rpx;
}
.news .index_title {
    margin-left: 30rpx;
}
.news_main {
    margin: 30rpx 0 10rpx 30rpx;
    width: 720rpx;
}
.scroll-news {
    display: flex;
    display: -webkit-flex;
    white-space: nowrap;
}
.news_main navigator {
    width: 220rpx; 
    height: 304rpx;
    overflow: hidden;
    background: #f5f5f5;
    margin: 0 15rpx 0 0;
    position: relative;
    display: inline-block;
    border-radius: 15rpx;
    overflow: hidden;
}
.news_main navigator image {
    /* width: 100%;  */
    width: 220rpx; 
    height: 304rpx;
}
.news_main .con {
    width: 220rpx; 
    position: absolute;
    left: 0;
    bottom: 0;
    padding: 0 10rpx 30rpx;
    box-sizing: border-box;
}
.news_main navigator .text {
    font-size: 28rpx;
    font-weight: 500;
    color: #fff;
    font-size: 28rpx;
    white-space: normal;
    line-height: 32rpx;
}
.news_main navigator .time {
    font-size: 28rpx;
    font-weight: 500;
    color: #fff;
    font-size: 28rpx;
}
/* cooper */
.cooper {
    margin: 30rpx 30rpx 10rpx;
}
.cooper_main {
    margin: 30rpx 0 10rpx;
}
.cooper_main navigator {
    width: 100%;
    height: 80rpx;
    background: #f5f5f5;
    margin-bottom: 30rpx;
    padding: 0 20rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    border-radius: 15rpx;
    position: relative;
    box-shadow: 0 0 0.222222rem #eae8e8;
    overflow: hidden;

}
.cooper_main navigator .tit {
    padding-right: 20rpx;
}
.cooper_main navigator .tit image {
    width: 200rpx; 
    position: relative;
    top: 2rpx;
}
.cooper_main navigator .line {
    width: 1px;
    height: 60rpx;
    position: absolute;
    top: 10rpx;
    left: 240rpx;
}
.cooper_main navigator text {
    flex: 1;
    padding: 0 0 0 20rpx;
    font-size: 28rpx;
    font-weight: 550;
    color: #282b30;
}
/* footer */
.footer {
    padding: 100rpx 0 40rpx;
    text-align: center;
    background: #f1f0f5;
    color: #505050;
}
.footer .footer_logo {
    width: 380rpx;
    margin: 0 auto;
}
.footer .footer_logo image {
    width: 100%;
}
.footer .footer_solgan {
    font-size: 30rpx;
    margin: 10rpx 0 20rpx;
    font-weight: 550;
    letter-spacing: 2px;
}
.footer .footer_info {
    font-size: 24rpx;
    line-height: 32rpx;
}
.footer .footer_info text {
    display: block;
    line-height: 38rpx;
    color: #505050;
}