/**index.wxss**/
.welcome {
    padding: 30rpx 0;
    text-align: center;
    font-size: 32rpx;
    font-weight: 550;
    color: #000;
    letter-spacing: 1px;
}

/* banner */
.banner {
    margin: 0 0 20rpx;
}
.banner swiper {
    height: 290rpx;
} 
.banner swiper-item {
    text-align: center;
    padding: 0 16rpx;
    height: 100%;
}
.banner navigator {
    width: 100%;
    height: 100%;
    overflow: hidden;
    border-radius: 20rpx;
    background-color: #f5f2f2;
}
.banner image {
    width: 100%;
}
.banner .wx-swiper-dot{
    width:12rpx;
    display: inline-flex;
    height: 12rpx;
    margin-left: 10rpx;
    border-radius: 50%;
    border: 1px solid #fff;
    justify-content:space-between;
}
.banner .wx-swiper-dot-active {
    background: #fff;
}
/* menu */
.menu {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    margin: 40rpx 30rpx;
}
.menu .menu-item {
    flex: 1;
    text-align: center;
}
.menu .menu-item .menu_pic {
    width: 100rpx;
    height: 100rpx;
    margin: 0 auto 10rpx;
    overflow: hidden;
    border-radius: 50%;
    background-color: #f5f2f2;
}
.menu .menu-item image {
    width: 100%;
}
.menu .menu-item text {
    display: block;
    text-align: center;
    color: #454545;
    font-size: 26rpx;
    font-weight: 550;
}

/* store */
.store {
    margin: 30rpx 30rpx 10rpx;
}
.index_title {
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    align-items: center;
    font-size: 32rpx;
}
.index_title .text {
    color: #000;
    font-weight: 500;
    padding-left: 10rpx;
    border-left: 2px solid #000;
    line-height: 30rpx;
}
.index_title navigator {
    font-size: 28rpx;
    color: #565656;
    display: flex;
    display: -webkit-flex;
    align-items: center;
}
.store_main {
    width: 690rpx;
    margin: 30rpx 0 0;
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    flex-wrap: wrap;
}
.store_main navigator {
    width: 340rpx;
    border-radius: 10rpx;
    margin-bottom: 10rpx;
}
.store_main navigator image {
    width: 100%;
}
/* stone */
.stone {
    margin: 30rpx 30rpx 10rpx;
}
.stone_main {
    width: 690rpx;
    margin: 20rpx 0 0;
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    flex-wrap: wrap;
}
.stone_main navigator {
    width: 164rpx;
    height: 122rpx;
    border-radius: 10rpx;
    overflow: hidden;
    background-color: #f5f2f2;
    margin-bottom: 20rpx;
    position: relative;
}
.stone_main navigator .stone_cover {
    width: 100%;
    height: 100%;
}
.stone_main navigator .icon {
    position: absolute;
    top: 0;
    right: 0;
    width: 40%;
}
/* supply */
.supply {
    margin: 30rpx 30rpx 10rpx;
}
.supply_main {
    margin: 30rpx 0 10rpx;
}
.supply_main navigator {
    width: 100%;
    height: 56rpx;
    overflow: hidden;
    background: url("https://stcdn.taoshibancang.com/static/wechat/supply_bg.jpg") no-repeat 0 0;
    background-size: 100%;
    margin-bottom: 30rpx;
    padding: 0 20rpx;
    display: flex;
    display: -webkit-flex;
}
.supply_main navigator image {
    width: 80rpx;
    margin-right: 20rpx;
    display: block;
}
.supply_main navigator text {
    flex: 1;
    padding: 4rpx 0 0 0rpx;
    font-size: 30rpx;
    color: #000;
    font-weight: 500;
}
/* news */
.news {
    margin: 30rpx 30rpx 10rpx;
}
.news_main {
    margin: 30rpx 0 10rpx;
}
.news_main navigator {
    width: 100%; 
    height: 60rpx;
    overflow: hidden;
    background: #f7f1e5;
    margin-bottom: 30rpx;
    padding: 0 20rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
}
.news_main navigator image {
    width: 40rpx;
}
.news_main navigator text {
    font-size: 30rpx;
    color: #000;
    font-weight: 550;
}
.news_main navigator .text {
    flex: 1;
}
.news_main navigator .time {
    padding: 0 0rpx 0 10rpx;
    width: 210rpx;
}
/* cooper */
.cooper {
    margin: 30rpx 30rpx 10rpx;
}
.cooper_main {
    margin: 30rpx 0 10rpx;
}
.cooper_main navigator {
    width: 100%;
    height: 60rpx;
    background: #eaeaea;
    margin-bottom: 30rpx;
    padding: 0 20rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
}
.cooper_main navigator image {
    width: 90rpx; 
    position: relative;
    top: -10rpx;
}
.cooper_main navigator text {
    flex: 1;
    padding: 0 0 0 20rpx;
    font-size: 30rpx;
    font-weight: 550;
    color: #000;
}
/* footer */
.footer {
    padding: 100rpx 0 40rpx;
    text-align: center;
    background: #f1f0f5;
    color: #505050;
}
.footer .footer_logo {
    width: 380rpx;
    margin: 0 auto;
}
.footer .footer_logo image {
    width: 100%;
}
.footer .footer_solgan {
    font-size: 30rpx;
    margin: 10rpx 0 20rpx;
    font-weight: 550;
    letter-spacing: 2px;
}
.footer .footer_info {
    font-size: 24rpx;
    line-height: 32rpx;
}
.footer .footer_info text {
    display: block;
    line-height: 38rpx;
    color: #505050;
}