/**index.wxss**/
.scrolltxt{padding:0 2rpx;}
.marquee_box {position:relative;color:#333;height:90rpx;display:block;overflow:hidden;} 
.marquee_text {white-space: nowrap;position:absolute;top:0;font-size:28rpx;height:90rpx;line-height:90rpx;}

.welcome {
    padding: 30rpx 0;
    text-align: center;
    font-size: 32rpx;
    font-weight: 550;
    color: #000;
    letter-spacing: 1px;
}
.container {
    padding-bottom: 30rpx;
}
/* banner */
.banner {
    margin: 20rpx 0;
}
.banner swiper {
    height: 290rpx;
} 
.banner swiper-item {
    text-align: center;
    padding: 0 16rpx;
    height: 100%;
}
.banner navigator {
    width: 100%;
    height: 100%;
    overflow: hidden;
    border-radius: 20rpx;
    background-color: #f5f2f2;
}
.banner image {
    width: 100%;
}
.banner .wx-swiper-dot{
    width:12rpx;
    display: inline-flex;
    height: 12rpx;
    margin-left: 10rpx;
    border-radius: 50%;
    border: 1px solid #fff;
    justify-content:space-between;
}
.banner .wx-swiper-dot-active {
    background: #fff;
}
/* menu */
.menu {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    margin: 40rpx 30rpx;
}
.menu .menu-item {
    flex: 1;
    text-align: center;
}
.menu .menu-item .menu_pic {
    width: 100rpx;
    height: 100rpx;
    margin: 0 auto 10rpx;
    overflow: hidden;
    border-radius: 50%;
    background-color: #f5f2f2;
}
.menu .menu-item image {
    width: 100%;
}
.menu .menu-item text {
    display: block;
    text-align: center;
    color: #454545;
    font-size: 26rpx;
    font-weight: 550;
}

/* store */
.store {
    margin: 30rpx 30rpx 10rpx;
}
.index_title {
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    align-items: center;
    font-size: 32rpx;
}
.index_title .text {
    color: #000;
    font-weight: 500;
    /* padding-left: 10rpx;
    border-left: 2px solid #000; */
    line-height: 30rpx;
}
.index_title navigator {
    font-size: 28rpx;
    color: #999;
    display: flex;
    display: -webkit-flex;
    align-items: center;
}
.store_main {
    margin: 30rpx 0 10rpx 0rpx;
    width: 720rpx;
}
.scroll-store {
    display: flex;
    display: -webkit-flex;
    white-space: nowrap;
}
.store_main navigator {
    width: 300rpx; 
    height: 225rpx;
    overflow: hidden;
    margin: 0 20rpx 0 0;
    position: relative;
    display: inline-block;
    border-radius: 15rpx;
    overflow: hidden;
}
.store_main .thumb {
    /* width: 100%;  */
    width: 300rpx; 
    height: 225rpx; 
    background: #f5f5f5;
    overflow: hidden;
}
.store_main .thumb image {
    width: 300rpx; 
    height: 225rpx; 
}
.store_main .con {
    width: 300rpx; 
    position: absolute;
    left: 0;
    bottom: 0;
    padding: 0 10rpx 30rpx;
    box-sizing: border-box;
}
.store_main navigator .text {
    font-size: 30rpx;
    font-weight: 500;
    color: #fff;
    white-space: normal;
    line-height: 32rpx;
}
.store_main navigator .time {
    font-size: 28rpx;
    font-weight: 500;
    color: #fff;
    font-size: 28rpx;
}
/* stone */
.stone {
    margin: 40rpx 30rpx 10rpx;
}
.stone_main {
    width: 690rpx;
    margin: 20rpx 0 0;
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    flex-wrap: wrap;
}
.stone_main navigator {
    margin-bottom: 20rpx;
}
.stone_main .pic {
    width: 220rpx;
    height: 180rpx;
    border-radius: 10rpx;
    overflow: hidden;
    background-color: #f5f2f2;
    margin-bottom: 8rpx;
    position: relative;
}
.stone_main .pic .stone_cover {
    width: 100%;
    height: 100%;
}
.stone_main .pic .icon {
    position: absolute;
    top: 0;
    right: 0;
    width: 40%;
}
.stone_main .name {
    font-size: 28rpx;
    color: #666;
    text-align: center;
}
/* supply */
.supply {
    margin: 30rpx 30rpx 10rpx;
}
.supply_main {
    margin: 30rpx 0 10rpx;
}
.supply_main navigator {
    width: 100%;
    height: 56rpx;
    overflow: hidden;
    background: url("https://stcdn.taoshibancang.com/static/wechat/supply_bg.jpg") no-repeat 0 0;
    background-size: 100%;
    margin-bottom: 30rpx;
    padding: 0 20rpx;
    display: flex;
    display: -webkit-flex;
}
.supply_main navigator image {
    width: 80rpx;
    margin-right: 20rpx;
    display: block;
}
.supply_main navigator text {
    flex: 1;
    padding: 4rpx 0 0 0rpx;
    font-size: 30rpx;
    color: #000;
    font-weight: 500;
}
/* news */
.news {
    margin: 30rpx 30rpx 10rpx;
}
.news_main {
    margin: 30rpx 0 10rpx;
}
.news_main navigator {
    width: 100%; 
    margin-bottom: 30rpx;
    display: flex;
    display: -webkit-flex;
}
.news_main navigator .pic {
    width: 200rpx;
    margin-right: 30rpx;
}
.news_main navigator .pic image {
    width: 100%;
}
.news_main navigator .text {
    font-size: 30rpx;
    color: #333;
    line-height: 36rpx;
}
.news_main navigator .time {
    padding: 10rpx 0rpx 0 0rpx;
    text-align: right;
}
/* cooper */
.cooper {
    margin: 30rpx 30rpx 10rpx;
}
.cooper_main {
    margin: 30rpx 0 10rpx;
}
.cooper_main navigator {
    width: 100%;
    height: 60rpx;
    background: #eaeaea;
    margin-bottom: 30rpx;
    padding: 0 20rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
}
.cooper_main navigator image {
    width: 90rpx; 
    position: relative;
    top: -10rpx;
}
.cooper_main navigator text {
    flex: 1;
    padding: 0 0 0 20rpx;
    font-size: 30rpx;
    font-weight: 550;
    color: #000;
}
/* footer */
.footer {
    padding: 100rpx 0 40rpx;
    text-align: center;
    background: #f1f0f5;
    color: #505050;
}
.footer .footer_logo {
    width: 380rpx;
    margin: 0 auto;
}
.footer .footer_logo image {
    width: 100%;
}
.footer .footer_solgan {
    font-size: 30rpx;
    margin: 10rpx 0 20rpx;
    font-weight: 550;
    letter-spacing: 2px;
}
.footer .footer_info {
    font-size: 24rpx;
    line-height: 32rpx;
}
.footer .footer_info text {
    display: block;
    line-height: 38rpx;
    color: #505050;
}

